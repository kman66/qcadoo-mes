<view defaultAuthorizationRole="ROLE_MATERIAL_FLOW" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://schema.qcadoo.org/view"
      xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
      name="resourceCorrectionsList"
      modelName="resourceCorrection"
      menuAccessible="true">

    <component type="window" name="window">
        <ribbon>
            <template name="standardGridTemplate" excludeItems="actions.new,actions.copy, actions.delete"/>
        </ribbon>

        <component type="grid" name="resourceCorrectionsGrid" reference="grid">
            <option type="column" name="number" fields="number" link="true"/>
            <option type="column" name="createDate" fields="createDate" link="true" width="100"/>
            <option type="column" name="productNumber" fields="product"
                    expression="#product['number']" link="true" width="150"/>
            <option type="column" name="productName" fields="product"
                    expression="#product['name']" link="true" width="250"/>
            <option type="column" name="oldQuantity" fields="oldQuantity" width="80"/>
            <option type="column" name="newQuantity" fields="newQuantity" width="80"/>
            <option type="column" name="productUnit" fields="product"
                    expression="#product['unit']" width="40"/>
            <option type="column" name="oldStorageLocation" fields="oldStorageLocation" width="110"
                    expression="#oldStorageLocation['number']"/>
            <option type="column" name="newStorageLocation" fields="newStorageLocation" width="110"
                    expression="#newStorageLocation['number']"/>

            <option type="order" column="number" direction="desc"/>

            <option type="searchable"
                    value="number,createDate,productNumber,productName,oldQuantity,newQuantity,oldStorageLocation,newStorageLocation"/>
            <option type="orderable"
                    value="number,createDate,productNumber,productName,oldQuantity,newQuantity,oldStorageLocation,newStorageLocation"/>

            <option type="correspondingView" value="materialFlowResources/resourceCorrectionDetails"/>
            <option type="correspondingComponent" value="form"/>

            <option type="fullscreen" value="true"/>
            <option type="multiselect" value="true"/>
        </component>

        <option type="fixedHeight" value="true"/>
        <option type="header" value="false"/>
    </component>
</view>
